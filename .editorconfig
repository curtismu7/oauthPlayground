# EditorConfig is awesome: https://EditorConfig.org

# top-most EditorConfig file
root = true

# Unix-style newlines with a newline ending every file
[*]
end_of_line = lf
insert_final_newline = true
charset = utf-8
trim_trailing_whitespace = true

# TypeScript, JavaScript, JSX, TSX
[*.{ts,tsx,js,jsx,mjs,cjs}]
indent_style = tab
indent_size = 2
max_line_length = 100

# JSON, YAML
[*.{json,yml,yaml}]
indent_style = tab
indent_size = 2

# Markdown
[*.md]
indent_style = tab
indent_size = 2
trim_trailing_whitespace = false

# Package files
[{package.json,package-lock.json}]
indent_style = tab
indent_size = 2

# Shell scripts
[*.sh]
indent_style = tab
indent_size = 2

# Config files
[*.config.{js,ts,mjs}]
indent_style = tab
indent_size = 2
