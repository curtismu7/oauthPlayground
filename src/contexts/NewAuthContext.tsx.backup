        tokenEndpoint: tokenEndpoint || `${apiUrl}/${envId}/as/token`,
        userInfoEndpoint: userInfoEndpoint || `${apiUrl}/${envId}/as/userinfo`,
        endSessionEndpoint: logoutEndpoint || `${apiUrl}/${envId}/as/endsession`,
        scopes: ['openid', 'profile', 'email'],
